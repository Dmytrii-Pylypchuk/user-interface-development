<Window x:Class="redactor_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Текстовий редактор" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Файл">
                <MenuItem Header="Новий" Click="NewFile_Click"/>
                <MenuItem Header="Відкрити" Click="OpenFile_Click"/>
                <MenuItem Header="Зберегти" Click="SaveFile_Click"/>
                <Separator/>
                <MenuItem Header="Вийти" Click="Exit_Click"/>
            </MenuItem>
        </Menu>

        <TextBox Name="Editor"
                 AcceptsReturn="True"
                 AcceptsTab="True"
                 VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Auto"/>
    </DockPanel>
</Window>